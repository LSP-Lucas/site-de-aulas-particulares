<div class="items">

    <div class="item">
        <div>Avatar URL</div>
        <div>
            <input 
                type="url" 
                name="avatar_url" 
                placeholder="http://" 
                autocomplete="off" 
                value="{{ teacher.avatar_url }}">
        </div>
    </div>

    <div class="item">
        <div>Nome completo</div>
        <div>
            <input 
                type="text" 
                name="name" 
                placeholder="Nome do professor" 
                autocomplete="off"
                value="{{ teacher.name }}">
        </div>
    </div>

    <div class="item">
        <div>Data de nascimento</div>
        <div>
            <input 
                type="date" 
                name="birth"
                value="{{ teacher.birth }}">
        </div>
    </div>

    <div class="item">
        <div>Grau de escolaridade</div>
        <div>
            <select name="grade">
                <option value="medio"
                    {% if teacher.grade == 'medio' %}
                        selected
                    {% endif %}
                    > Ensino Médio Completo
                </option>
                <option value="superior"
                     {% if teacher.grade == 'superior' %}
                        selected
                    {% endif %}
                    > Superior Completo
                </option>
                <option value="mestrado"
                     {% if teacher.grade == 'mestrado' %}
                        selected
                    {% endif %}
                    >Mestrado
                </option>
                <option value="doutorado"
                    {% if teacher.grade == 'doutorado' %}
                        selected
                    {% endif %}
                    >Doutorado
                </option>
            </select>
        </div>
    </div>

    <div class="item">
        <div>Tipo de aula</div>
        <div>
            <span>
                <input 
                    type="radio" 
                    name="modality" 
                    value="Presencial" 
                    {% if teacher.modality == 'Presencial' %}
                    checked
                    {% endif %}> Presencial
            </span>
            <span>
                <input 
                type="radio" 
                name="modality" 
                value="EAD"
                {% if teacher.modality == 'EAD' %}
                    checked
                {% endif %}> EAD
            </span>
        </div>
    </div>

    <div class="item">
        <div>Acompanhamento</div>
        <div>
            <input 
                type="text" 
                name="services" 
                placeholder="Separe os serviços prestados por vírgula" 
                autocomplete="off"
                value="{{ teacher.services }}">
        </div>
    </div>

    <button type="submit">Cadastrar</button>
</div>