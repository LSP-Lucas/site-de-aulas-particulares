{% extends "layout.njk" %}

{% block content %}
   
    <form class="card" method="POST" action="/teachers">
        <section
            class="avatar"
            style="background: url(https://source.unsplash.com/collection/827741/500x500) no-repeat center center / cover">
        </section>

        <section class="details">
            <h1>Novo Professor</h1>

            <div class="items">

                <div class="item">
                    <div>Avatar URL</div>
                    <div>
                        <input type="url" name="avatar_url" placeholder="http://" autocomplete="off">
                    </div>
                </div>

                <div class="item">
                    <div>Nome completo</div>
                    <div>
                        <input type="text" name="name" placeholder="Nome do professor" autocomplete="off">
                    </div>
                </div>

                <div class="item">
                    <div>Data de nascimento</div>
                    <div>
                        <input type="date" name="birth">
                    </div>
                </div>

                <div class="item">
                    <div>Grau de escolaridade</div>
                    <div>
                        <select name="grade">
                            <option value="Ensino Médio Completo">Ensino Médio Completo</option>
                            <option value="Superior Completo">Superior Completo</option>
                            <option value="Mestrado">Mestrado</option>
                            <option value="Doutorado">Doutorado</option>
                        </select>
                    </div>
                </div>

                <div class="item">
                    <div>Tipo de aula</div>
                    <div>
                        <span><input type="radio" name="modality" value="Presencial" checked>Presencial</span>
                        <span><input type="radio" name="modality" value="EAD">EAD</span>
                    </div>
                </div>

                <div class="item">
                    <div>Acompanhamento</div>
                    <div>
                        <input type="text" name="services" placeholder="Separe os serviços prestados por vírgula" autocomplete="off">
                    </div>
                </div>

                <button type="submit">Cadastrar</button>
            </div>
        </section>
    </form>

{% endblock content %}

